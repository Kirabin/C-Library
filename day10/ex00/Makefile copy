NAME = libft

SOURCE = srcs/ft_putchar.c \
		  srcs/ft_putstr.c \
		  srcs/ft_strcmp.c \
		  srcs/ft_strlen.c \
		  srcs/ft_swap.c

OBJECTS = ft_putchar.o \
          ft_putstr.o \
		  ft_strcmp.o \
          ft_strlen.o \
          ft_swap.o

HEADER = includes

all: $(NAME)

$(NAME):
	gcc -c $(SOURCE)
	ar -rc $(NAME).a $(OBJECTS)
	ranlib $(NAME).a

test: 
	gcc main.c -L . -l ft -I $(HEADER)

clean:
	rm -f $(OBJECTS)

fclean: clean
	rm -f $(NAME).a

re: fclean all
