NAME = eval_expr

all: $(NAME)

$(NAME): *.c srcs/*.c includes/*.h
	gcc -Wall -Wextra -Werror -o $(NAME) *.c srcs/*.c -I includes/

test:
	./$(NAME) "3 + 42 * (1 - 2 / (3 + 4) - 1 % 21) + 1"
	./$(NAME) "1 + 2"
	./$(NAME) "2 * 3"
	./$(NAME) "4 / 2"
	./$(NAME) "5 % 2"
	./$(NAME) "1 - 5"
	./$(NAME) "(((((1 + 2))) + 2))"
	./$(NAME) "1    +    1    "
	./$(NAME) "0"
	./$(NAME) "23"
	./$(NAME) "2 + 2 * 2"
	./$(NAME) "0 - 2147483648"
	./$(NAME) "2147483647 + 0"
	./$(NAME) "-1"
	./$(NAME) "-1 + 1"
	./$(NAME) "(-1 + 1)"
	./$(NAME) "(((((-1)))))"
	./$(NAME) " 0 * -1"
	./$(NAME) "-2147483648"
	./$(NAME) "-21 * (-2)"
	./$(NAME) "-1 - -1"
	./$(NAME) "-1 - -1"

clean:

fclean: clean
	rm -f $(NAME)

re: fclean all
